<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_min"
    android:paddingEnd="@dimen/padding_min"
    android:paddingStart="@dimen/padding_min"
    android:paddingTop="@dimen/padding_min">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_huge"
        android:layout_toStartOf="@+id/img_user_photo"
        android:background="@drawable/chat_rounded_rect_bg_mine"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/padding_min">

        <TextView
            android:id="@+id/text_view_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_min"
            android:paddingLeft="@dimen/padding_min"
            android:paddingRight="@dimen/padding_min"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/chatTextMe"
            tools:text="Noice man !" />

        <TextView
            android:id="@+id/text_view_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_min"
            android:paddingRight="@dimen/padding_min"
            android:textColor="@color/grey_600"
            android:textSize="10dp"
            tools:text="3:00 PM" />
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_photo"
        android:layout_width="@dimen/user_icon_width"
        android:layout_height="@dimen/user_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_min"
        android:background="@drawable/circle_mine"
        android:gravity="center"
        android:src="@drawable/ic_user_white_24dp"
        app:civ_border_color="@color/border"
        app:civ_border_width="1dp" />
</RelativeLayout>